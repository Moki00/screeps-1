{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "moduleResolution": "Node",
    "outDir": "build",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules"
  ]
}